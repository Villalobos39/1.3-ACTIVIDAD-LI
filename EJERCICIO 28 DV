#include <iostream>
#include <math.h>
using namespace std;

int main() 
{
     int X;
        cout<<"...CALCULA EL PERIMETRO DE UN TRIANGULO EQUILATERO..."<<endl;
        cin>>X;
        cout<<"INGRESA X : "<<X<<endl;
        int Perimetro;
        
        Perimetro=3*X;
        
        cout<<"PERIMETRO : "<<Perimetro<<endl;
        
	return 0;
}
